
- if @service_member.present?
  .row
    .col-md-3
      p.last-passage class="passage-#{@passage.way}"
        i.glyphicon class="glyphicon-log-#{@passage.way}"
        = t("zuko.passages.new.last_passage.#{@passage.way}")

    .col-md-9
      p
        strong= ServiceMember.human_attribute_name(:rank)
        br
        = @service_member.rank
      p
        strong= ServiceMember.human_attribute_name(:lastname)
        br
        = @service_member.lastname
      p
        strong= ServiceMember.human_attribute_name(:firstname)
        br
        = @service_member.firstname


.row
  .col-md-12
    h1= t('.new_passage')

    = form_tag zuko_passages_path, method: 'post' do
      .form-group.string.passage_ahv_number
        = label_tag :passage_ahv_number, ServiceMember.human_attribute_name(:ahv_number), class: 'control-label string'
        = text_field_tag :passage_ahv_number, nil, class: 'form-control string', name: 'passage[ahv_number]', type: 'text', autofocus: true

